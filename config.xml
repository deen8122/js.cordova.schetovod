<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.deen812.schetovod" version="2.0.1">
    <name>Счетовод</name>
    <description>
        Расчет расходов электроэнергии, воды и газа
    </description>
    <author email="deen812@mail.ru" href="deen812.blogspot.ru">
        deen812Studio
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
	 <icon density="mdpi" height="72" platform="android" src="res/icon.png" width="72"/>
	 <platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash density="land-hdpi" src="res/splash.png"/>
    <splash density="land-ldpi" src="res/splash.png"/>
    <splash density="land-mdpi" src="res/splash.png"/>
    <splash density="land-xhdpi" src="res/splash.png"/>

    <splash density="port-hdpi" src="res/splash.png"/>
    <splash density="port-ldpi" src="res/splash.png"/>
    <splash density="port-mdpi" src="res/splash.png"/>
    <splash density="port-xhdpi" src="res/splash.png"/>
</platform>

</widget>
